<% if @activity.whichtype == 'count' %>
  <%= render 'show_count' %>
<% elsif @activity.whichtype == 'checkmark' %>
  <%= render 'show_checkmark' %>
<% end %>


<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @activity.name %>
</p>

<p>
  <b>Type:</b>
  <%= @activity.whichtype %>
</p>


<%= @logs.each do |l| %>
  <div><%= l.checkmark %></div>
<% end %>


<%= form_for(@log) do |f| %>
  <%= f.label @activity.whichtype %><br/>
  <%= f.text_field @activity.whichtype, {:class => 'new-log-input'} %>
  <%= f.hidden_field :whichtype, :value => @activity.whichtype %>
  <%= f.hidden_field :activity_id, :value => @activity.id %>
  <%= submit_tag "New" %>
<% end %>


<%= link_to 'Edit', edit_activity_path(@activity) %> |
<%= link_to 'Back', activities_path %>
